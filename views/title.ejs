<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Hangman</title>
        <meta name="description" content="Hangman Game">
        <meta name="author" content="Abdallah Karam">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/assets/css/styles.css" />
    </head>

    <body>
        <div class="page-header text-center">
            <h1>Hangman</h1>
        </div>

        <div class="container">
            <div id="game" class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <img id="hangman" class="img-responsive" src="/assets/game_files/hangman_1.png">
                    <div id="word_holder"></div>
                    <div id="button_holder"></div>
                    <div id="attempts"><h2 id="score">Remaining Attempts: 6</h2></div>
                </div>
            </div>
            <div id="start" class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Player Name</label>
                        <div class="col-10">
                            <input class="form-control" type="text" value="Guest" id="username">
                        </div>
                    </div>
                    <button id="start_button" class="btn btn-primary btn-lg btn-block">Start Game</button>
                </div>
            </div>
            <div id="leaderboards" class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <table id="leaderboard_table" class="table">
                        <tr>
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        
        <script
			  src="https://code.jquery.com/jquery-3.2.1.min.js"
			  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
			  crossorigin="anonymous"></script>
        <script src="assets/js/main.js"></script>
    </body>
</html>